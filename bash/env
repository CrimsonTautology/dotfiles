#!/usr/bin/env sh

export PATH=$HOME/bin/:$PATH

export EDITOR=vim
export VISUAL=vim
export PAGER=less

export LYNX_LSS=$HOME/bin/dotfiles/lynx/lynx.lss
export LESS='-MR'

# directory shortcuts
export USER_DIR=$HOME
export DOTFILES="$HOME/bin/dotfiles"
export WORK_DIR="$HOME/work"
export PLAY_DIR="$HOME/play"
export CURRENT_PROJECT="$HOME/work"
