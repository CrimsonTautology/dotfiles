#!/bin/sh

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto -p'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

#Default command overrides
alias rm='rm -i'

# some more ls aliases
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'

alias vrep='grep -v'
alias less='less -MR'

#SRCDS
alias sxs='screen -x SRCDS'

# directory shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias jet='cd ~/steamcmd/tf2_jet/tf'
alias main='cd ~/steamcmd/tf2_main/tf'
alias l4d='cd ~/steamcmd/l4d_main/left4dead'
alias l4d2='cd ~/steamcmd/l4d2_main/left4dead2'
alias csgo='cd ~/steamcmd/csgo_main/csgo'
alias fof='cd ~/steamcmd/fof_main/fof'
alias tpf='cd ~/steamcmd/fof_tp/fof'
alias mkf='cd ~/steamcmd/fof_mk/fof'
alias nmrih='cd ~/steamcmd/nmrih_main/nmrih'
alias sjet='screen -x tf2_jet'
alias smain='screen -x tf2_main'
alias snmrih='screen -x nmrih_main'
alias sl4d='screen -x l4d_main'
alias sl4d2='screen -x l4d2_main'
alias scsgo='screen -x csgo_main'
alias sfof='screen -x fof_main'
alias stpf='screen -x fof_tp'
alias smkf='screen -x fof_mk'
alias sm='cd ~/sourcemod'
alias bd='cd ~/bin/dotfiles/'
alias repo='cd ~/repo_dump'

#Vim
alias vimn='vim -c "NERDTree" '
alias gvimn='gvim -c "NERDTree" '
alias vundle='vim +BundleInstall +qall'

#Git
alias gpom='git push -u origin master'

#Tmux
alias tmux2='tmux source-file ~/bin/dotfiles/tmux/session_2right'
alias tmux21='tmux source-file ~/bin/dotfiles/tmux/session_2right_1down'
alias tmux3='tmux source-file ~/bin/dotfiles/tmux/session_3right'
alias killtmux='tmux kill-session'
