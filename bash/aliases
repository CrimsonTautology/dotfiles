#!/bin/sh

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto -p'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

#Default command overrides
alias rm='rm -i'

# some more ls aliases
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'

alias vrep='grep -v'
alias less='less -MR'

alias mdy='date +%m%d%y'
alias mdY='date +%m%d%Y'
alias ymd='date +%y%m%d'
alias Ymd='date +%Y%m%d'

# directory shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias jet='cd ~/steamcmd/tf2_jet/tf'
alias main='cd ~/steamcmd/tf2_main/tf'
alias stt='cd ~/steamcmd/tf2_stt/tf'
alias l4d='cd ~/steamcmd/l4d_main/left4dead'
alias l4d2='cd ~/steamcmd/l4d2_main/left4dead2'
alias csgo='cd ~/steamcmd/csgo_main/csgo'
alias gmod='cd ~/steamcmd/gmod_main/garrysmod'
alias fof='cd ~/steamcmd/fof_main/fof'
alias ggf='cd ~/steamcmd/fof_gg/fof'
alias ggf2='cd ~/steamcmd/fof_gg2/fof'
alias foz='cd ~/steamcmd/fof_foz/fof'
alias mkf='cd ~/steamcmd/fof_mk/fof'
alias nmrih='cd ~/steamcmd/nmrih_main/nmrih'
alias ins='cd ~/steamcmd/ins_main/insurgency'
alias dod='cd ~/steamcmd/dod_main/dod'
alias sm='cd ~/sourcemod'
alias bd='cd ~/bin/dotfiles/'
alias repo='cd ~/repo_dump'

#Screens
alias sxs='screen -x SRCDS'
alias sjet='screen -x tf2_jet'
alias smain='screen -x tf2_main'
alias sstt='screen -x tf2_stt'
alias snmrih='screen -x nmrih_main'
alias sl4d='screen -x l4d_main'
alias sl4d2='screen -x l4d2_main'
alias scsgo='screen -x csgo_main'
alias sgmod='screen -x gmod_main'
alias sfof='screen -x fof_main'
alias sggf='screen -x fof_gg'
alias sggf2='screen -x fof_2gg'
alias sfoz='screen -x fof_foz'
alias smkf='screen -x fof_mk'
alias sins='screen -x ins_main'
alias sdod='screen -x dod_main'

alias rtvs='grep -B 3 "rockthevote" L* | grep "Mapchange to" | sed -e "s/^.*Mapchange to //g" | sed -e "s/ -*//g" | sort | uniq -c |sort -n'

#Vim
alias vimn='vim -c "NERDTree" '
alias gvimn='gvim -c "NERDTree" '
alias vundle='vim +BundleInstall +qall'

#Git
alias gpom='git push -u origin master'
