#!/usr/bin/env sh

# default command overrides
alias grep='grep --color=auto'
alias ls='ls --color=auto -p'
alias rm='rm -i'

# vim
alias vimn='vim -c "NERDTree"'

# python
alias penv='python -m venv env'
alias seba='source env/bin/activate'

# directory shortcuts
alias dots='cd $DOTFILES'
alias work='cd $WORK_DIR'
alias play='cd $PLAY_DIR'
alias cpro='cd $CURRENT_PROJECT'

alias bill='cd $WIN_USER_DIR'
alias bdots='cd $WIN_DOTFILES'
alias bwork='cd $WIN_WORK_DIR'
alias bplay='cd $WIN_PLAY_DIR'
