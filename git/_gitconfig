[init]
	#templatedir = ~/bin/dotfiles/git/template
[alias]
    ctags = !.git/hooks/ctags
    ignored = !git ls-files -v | grep "^[[:lower:]]"
[core]
	editor = vim -f
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[credential]
	helper = cache --timeout=36000
[push]
	default = current
